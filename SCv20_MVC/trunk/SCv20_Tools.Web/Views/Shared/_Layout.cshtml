<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <title>@ViewBag.Title</title>
    <link href="/Content/Styles/layout.css" rel="stylesheet" />
    <link href="/Content/Styles/menu.css"   rel="stylesheet" />
    <link href="/Content/Styles/site.css"   rel="stylesheet" />

    <script src="/Content/Scripts/jquery/jquery-1.7.1.min.js" type="text/javascript"></script>
    <script src="/Content/Scripts/util.js"></script>
    @Html.Partial("_requiredScripts")
</head>

<body>
    <div id="header">
        <div class="title">
            SpyCraft v2.0 Online Tools
        </div>
        <div class="navigation">
            @*HOME | OPTION 1 | OPTION 2 | OPTION 3 | OPTION 4 | OPTION 5*@
            @Html.Partial("_sysMenu")
        </div>
    </div>

    <div id="container">
        <div id="left">
            <div class="title">
                Navigation
            </div>
            <div class="content">
                @Html.Partial("_menu")
            </div>
        </div>


        <div id="main">
            <div class="title">
                @ViewBag.Title
            </div>

            <div class="content">
                <div id="ajaxMessage" class="info">
                    <a class="close" href="#" onclick="$(this).parent().fadeOut('fast');return false;">
                        <span/>
                    </a>
                    <div class="message" style="overflow:auto">&nbsp;</div>
                </div>

                @RenderBody()
                
                <div class="push" style="height: 1em; border: 0px solid black;"></div>
            </div>
        </div>


        <div id="footer">
            <div class="inner">
                <div class="content">
                    Footer contente here...
                </div>
            </div>
        </div>

        <div id="ajaxLoader">&nbsp;</div>
    </div>
    @RenderSection("scripts", false)
</body>
</html>
